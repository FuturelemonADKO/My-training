#1
class Student:
    def __init__(self,name,age,grades=None):  #НЕ ИСПОЛЬЗОВАТЬ ИЗМ ТИПЫ В ЗНАЧЕНИЯХ!!!
        self.name = name
        self.age = age
        self.grades = grades if grades is not None else []
        
    def add_grades(self, grade):
        try:
            self.grades.append(grade)
        except TypeError:
            print('только цифры')
        except Exception as e:
            print(f"Неожиданная ошибка: {e}")
    
    def avg_grades(self):
        return sum(self.grades)/len(self.grades)
    
    def is_excellent(self):
        return self.avg_grades()>=4.5    #МОЖНО БЕЗ if-else

#2
class PasswordManager:
    def __init__(self):
        self.__passwords={}  #ДЕЛАЕМ ПРИВАТНЫЙ СЛОВАРЬ
          
    def add_password(self,site, password):
        self.__passwords[site]=password #БЕЗ self.site так как нет в init
    
    def get_password(self,site):
        return self.__passwords.get(site)   #ДЕЛАЕМ ЧЕРЕЗ get, чтобы не было ошибка
    
    def remove_site(self, site):
        if site in self.__passwords:
            del self.__passwords[site]    
    
    def list_sites(self):
        return list(self.__passwords.keys())    
    
#3
class Rectangle:
    def __init__(self, width, height):
        self.__width = width  
        self.__height = height
    
    # Геттер(метод получения) для width 
    @property
    def width(self):
        return self.__width
    
    # Сеттер(метод установки значения) для width
    @width.setter
    def width(self, value):
        if value < 0:
            raise ValueError("Ширина не может быть отрицательной")
        self.__width = value
    
    # Геттер для height
    @property
    def height(self):
        return self.__height
    
    # Сеттер для height
    @height.setter
    def height(self, value):
        if value < 0:
            raise ValueError("Высота не может быть отрицательной")
        self.__height = value
        
    @property
    def area(self):     #ПРОСТО self, так как это свойство
        return self.__height*self.__width   #ДЕЛАЕМ ТАК чтобы заново не прописывать высоту и ширину  
    @property
    def perimetr(self):
        return 2*self.__width + 2*self.__height
    #НЕ надо тут писать @property
    def __str__(self):
        return f'width = {self.__width}, hight = {self.__height}'
    
#4    
class User:
    users_count = 0  
    online_users = []
    
    def __init__(self,user):
           self.user=user
           self.is_onl=False
           User.users_count+=1
    
    def login(self):
        if not self.is_onl:
            self.is_onl=True
            User.online_users.append(self.user)
    
    def logout(self):
        if self.is_onl:
            self.is_onl=False
            User.online_users.remove(self.user)
    @classmethod 
    def get_online_count(cls):      #ПИШИМ cls, так как класс метод
        return len(cls.online_users) #также пишим класс
